{
"manifest_version": 3,
"name": "YouTube Speed Controller",
"version": "1.0.0",
"description": "Increase/decrease YouTube playback speed with + and - keys and popup controls.",
"icons": {
"16": "icon16.png",
"32": "icon32.png",
"48": "icon48.png",
"128": "icon128.png"
},
"permissions": [
"storage",
"activeTab",
"scripting"
],
"host_permissions": [
"*://*.youtube.com/*",
"*://youtube.com/*",
"*://*.youtube-nocookie.com/*"
],
"action": {
"default_popup": "popup.html",
"default_icon": "icon32.png"
},
"content_scripts": [
{
"matches": ["*://*.youtube.com/*", "*://youtube.com/*", "*://*.youtube-nocookie.com/*"],
"js": ["content_script.js"],
"run_at": "document_idle"
}
]
}